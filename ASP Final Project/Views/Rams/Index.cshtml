@model IEnumerable<ASP_Final_Project.Models.Ram>

@{
    ViewData["Title"] = "Rams";
}

<h1>Ram List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RamPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RamName)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.RamPrice)
                </td>
                <td>
                    <img width="70" height="70" src="/images/@Html.DisplayFor(modelItem => item.ImageLink)" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RamId">Details</a> |
                    <a asp-action="AddPart" asp-route-id="@item.RamId">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@foreach (var item in Model)
{
    <div class="gallery">
        <a target="_blank" asp-action="Details" asp-route-id="@item.RamId">
            <img src="/images/@Html.DisplayFor(modelItem => item.ImageLink)" alt="Gaming Pc" width="600" height="400">
        </a>
        <div class="desc">@Html.DisplayFor(modelItem => item.RamName)</div>
    </div>
}